{
    "name": "mobicms/mobicms",
    "description": "mobiCMS Content Management System core ftamework",
    "type": "mobicms-library",
    "homepage": "https://mobicms.org",
    "license": "GPL-3.0-only",
    "keywords": [
        "mobicms",
        "cms",
        "php",
        "mysql"
    ],
    "authors": [
        {
            "name": "Oleg Kasyanov",
            "role": "Team Lead, Developer",
            "homepage": "http://mobicms.net",
            "email": "dev@mobicms.net"
        },
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/mobicms/graphs/contributors"
        }
    ],
    "support": {
        "docs": "https://mobicms.org/docs",
        "forum": "https://mobicms.org/forum",
        "source": "https://github.com/mobicms/mobicms",
        "issues": "https://github.com/mobicms/mobicms/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-PDO": "*",
        "ext-mbstring": "*",
        "laminas/laminas-config-aggregator": "^1.5",
        "laminas/laminas-diactoros": "^2.6",
        "laminas/laminas-servicemanager": "^3.7",
        "mezzio/mezzio": "^3.6",
        "mezzio/mezzio-fastroute": "^3.2",
        "mezzio/mezzio-helpers": "^5.6",
        "mobicms/render": "dev-develop"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-mockery": "^0.7.0",
        "psalm/plugin-phpunit": "^0.15.1",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/stubs/constants.php"
        ],
        "psr-4": {
            "MobicmsTest\\": "tests/unit/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@security-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --show-info=true",
        "security-analysis": "psalm --taint-analysis --show-info=true --report=results.sarif",
        "test": "phpunit --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --colors=always --coverage-clover clover.xml"
        ]
    }
}
